<h1><%=@student.firstname %> <%=@student.lastname %></h1>

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

<script>
$(function () {
    $('#container').highcharts({
        title: {
            text: 'Student Progress',
            x: -20 //center
        },
        subtitle: {
            text: '<%=@student.firstname%> <%=@student.lastname%>',
            x: -20
        },
        xAxis: {
            categories: ['<%=Date.today%>']
        },
        yAxis: {
            title: {
                text: 'Score'
            },
            plotLines: [{
                value: 0,
                width: 1,
                color: '#808080'
            }]
        },
        tooltip: {
            valueSuffix: '%'
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: [
          <%@student.assignments.each do |g|%>
        {
            name: '<%=g.name%>',
            data: [<%=g.grade%>]
        },
<%end%>
         {
            name: 'New York',
            data: [0, 0.8, 5.7, 11.3, 17.0, 22.0, 24.8, 24.1, 20.1, 14.1, 8.6, 2.5]
        }, {
            name: 'Berlin',
            data: [0.6, 3.5, 8.4, 13.5, 17.0, 18.6, 17.9, 14.3, 9.0, 3.9, 1.0]
        }, {
            name: 'London',
            data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
        }]
    });
});

</script>


<table>
  <thead>
  <tr>
    <th>Class Number</th>
    <th>Grade</th>
    <th>Notes</th>
  </tr>
  </thead>

      <tr>
        <td><%=@student.classno %></td>
        <td><%=@student.grade %></td>
        <td><%=@student.notes %></td>
      </tr>
     

</table>  
<h3>Assignments</h3>
<%@student.assignments.each do |a| %>
<div><strong>Name: </strong><%=a.name %></div>
<div><strong>Score: </strong><%=a.grade %></div>
<div><strong>Notes: </strong><%=a.notes %></div>
<% end %>

<h2>New Assignment</h2>

<%= form_for(@assignment, :url => {:action => :new_assignments, :controller => :students}) do |f| %>
<%= hidden_field_tag :student_id, @student.id %>

<div class = "field">
  <%= f.label :name%><br>
  <%= f.text_field :name %>
</div>
<div class = "field">
  <%= f.label :grade%><br>
  <%= f.text_field :grade%>
</div>

<div class ="field">
  <%= f.label :notes%><br>
  <%= f.text_area :notes%>
</div>
<div class = "actions">
  <%= f.submit %>
</div>
<% end %>



<%= link_to 'Back', students_path %>
<%= link_to 'Edit', edit_path(:student => @student.id) %>

