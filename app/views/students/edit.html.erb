<h1>Edit</h1>

<%= form_for(@student, :url => {:action => :update, :controller => :students}) do |f| %>


  <div class="field">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :classno %><br>
    <%= f.text_field :classno %>
  </div>
  <div class="field">
    <%= f.label :grade %><br>
    <%= f.text_field :grade %>
  </div>
  <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes %>
  </div><br>
  <div class="actions">
<%= link_to 'Add Photo', new_photos_path %><br>
</div>
 

  <div class="actions">
